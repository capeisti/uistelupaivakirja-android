<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	android:id="@+id/ScrollView01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
	android:orientation="vertical" 
	android:layout_height="fill_parent" 
	android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent">

<TableLayout 
	android:id="@+id/TableLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:stretchColumns="1">
	
<TableRow>
<TextView android:text="@string/species" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<Spinner android:id="@+id/Species" android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>
<Button android:text="@string/add_new" android:id="@+id/AddSpecies" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</TableRow>

<TableRow>
<TextView android:text="@string/getter" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<Spinner android:id="@+id/Getter" android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>
<Button android:text="@string/add_new" android:id="@+id/AddGetter" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</TableRow>

<TableRow>
<TextView android:text="@string/method" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<Spinner android:id="@+id/Method" android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>
<Button android:text="@string/add_new" android:id="@+id/AddMethod" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</TableRow>

<TableRow>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lure"></TextView>
<Spinner android:id="@+id/Lure" android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>
<View android:layout_width="fill_parent" android:layout_height="fill_parent"></View>

</TableRow>

</TableLayout>

<LinearLayout 	
	android:id="@+id/LinearLayout03" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
<CheckBox android:text="@string/group" android:id="@+id/GroupCB" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
<EditText android:id="@+id/GroupSize" android:layout_width="60dp" android:layout_height="wrap_content" android:numeric="integer"></EditText>
<TextView android:text="@string/pcs" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</LinearLayout>

<TableLayout 
	android:id="@+id/TableLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:stretchColumns="1">
<TableRow>
<TextView android:text="@string/weight" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:id="@+id/Weight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numeric="decimal"></EditText>
<TextView android:text="@string/grams" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>

<TableRow>
<TextView android:text="@string/length" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:id="@+id/Length" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numeric="decimal"></EditText>
<TextView android:text="@string/cents" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>

<TableRow>
<TextView android:text="@string/spot_depth" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:id="@+id/SpotDepth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numeric="decimal"></EditText>
<TextView android:text="@string/metres" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>

<TableRow>
<TextView android:text="@string/depth" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:id="@+id/Depth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numeric="decimal"></EditText>
<TextView android:text="@string/metres" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>

<TableRow>
<TextView android:text="@string/trolling_speed" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:id="@+id/TrollingSpeed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numeric="decimal"></EditText>
<TextView android:text="@string/kmh" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>

<TableRow>
<TextView android:text="@string/lure_weight" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:id="@+id/LureWeight" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numeric="decimal"></EditText>
<TextView android:text="@string/grams" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>

<TableRow>
<TextView android:text="@string/release_width" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
<EditText android:id="@+id/ReleaseWidth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:numeric="decimal"></EditText>
<TextView android:text="@string/metres" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</TableRow>
</TableLayout>

<LinearLayout 	
	android:id="@+id/LinearLayout02" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent">
<Button android:text="@string/done" android:id="@+id/Done" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
<Button android:text="@string/cancel" android:id="@+id/Cancel" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>

</LinearLayout>

</ScrollView>
